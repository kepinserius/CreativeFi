{
  "name": "contentdefi",
  "version": "1.0.0",
  "description": "A decentralized crowdfunding platform for creators",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "node backend/dist/server.js",
    "test": "npm run test:contracts && npm run test:frontend && npm run test:backend",
    "test:contracts": "npx hardhat test",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.js --network mumbai"
  },
  "keywords": [
    "blockchain",
    "crowdfunding",
    "defi",
    "web3",
    "ethereum",
    "polygon",
    "nft",
    "creator-economy"
  ],
  "author": "ContentDeFi Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "concurrently": "^8.2.0",
    "dotenv": "^16.3.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "hardhat": "^2.22.0"
  },
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/contentdefi.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/contentdefi/issues"
  },
  "homepage": "https://github.com/yourusername/contentdefi#readme"
}
